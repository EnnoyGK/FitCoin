<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/text_rounded_corner"
        android:ems="10"
        android:hint="Логин"
        android:textColorHint="@color/black"

        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        app:circularflow_angles="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/text_rounded_corner"
        android:ems="10"
        android:hint="Адрес эл. почты"
        android:textColorHint="@color/black"

        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        app:circularflow_angles="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/text_rounded_corner"
        android:ems="10"
        android:hint="Имя"
        android:textColorHint="@color/black"

        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        app:circularflow_angles="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etRepeatPwd"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/text_rounded_corner"
        android:ems="10"
        android:hint="Подтвердить пароль"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        app:circularflow_angles="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPwd" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/text_rounded_corner"
        android:ems="10"
        android:hint="Пароль"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        app:circularflow_angles="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLogin" />

    <Button
        android:id="@+id/tvRegister"
        android:layout_width="232dp"
        android:layout_height="56dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="#F6DDFF"
        android:text="Зарегистрироваться"
        android:textColor="#000000"
        app:cornerRadius="100dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRepeatPwd" />

</androidx.constraintlayout.widget.ConstraintLayout>